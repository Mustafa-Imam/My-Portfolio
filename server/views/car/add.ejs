<%- include('../partials/header.ejs') %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 class="text-center"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="makeTextField">Make</label>
                    <input type="text" class="form-control"
                    id="makeTextField"
                    placeholder="Enter the make of the car"
                    name="Make" required>
                </div>

                <div class="form-group">
                    <label for="modelTextField">Model</label>
                    <input type="text" class="form-control"
                    id="modelTextField"
                    placeholder="Enter the cars model"
                    name="Model" required>
                </div>

                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control"
                    id="yearTextField"
                    placeholder="Enter the year the car was launched"
                    name="Year" required>
                </div>

                <div class="form-group">
                    <label for="colourTextArea">Colour</label>
                    <input type="text" class="form-control"
                    id="colourTextField"
                    placeholder="Enter the cars colour"
                    name="Colour" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the cars price"
                    name="Price" required>
                </div>

                <div class="form-group text-center mt-3"> <!-- Centered and with margin -->
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit</button>
                
                        <a href="/carcollection" class="btn btn-warning">
                            <i class="fas fa-times"></i> Cancel</a>
                </div>

            </form>
        </div>

    </div>
</div>

<%- include('../partials/footer.ejs') %>