<%- include('../partials/header.ejs') %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="makeTextField">Make</label>
                    <input type="text" class="form-control"
                    id="makeTextField"
                    placeholder="Enter the make of the car"
                    make="make" required>
                </div>

                <div class="form-group">
                    <label for="modelTextField">Model</label>
                    <input type="text" class="form-control"
                    id="modelTextField"
                    placeholder="Enter the cars model"
                    model="model" required>
                </div>

                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control"
                    id="yearTextField"
                    placeholder="Enter the year of the car"
                    year="year" required>
                </div>

                <div class="form-group">
                    <label for="colourTextArea">Colour</label>
                    <textarea type="text" class="form-control"
                    id="colourTextArea"
                    placeholder="Enter the cars colour"
                    colour="colour" required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the car's Price"
                    price="price" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/carcollection" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include('../partials/footer.ejs') %>