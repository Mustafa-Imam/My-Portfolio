<%- include('../partials/header.ejs') %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="makeTextField">car Title</label>
                    <input type="text" class="form-control"
                    id="makeTextField"
                    placeholder="Enter the car Title"
                    make="make" required>
                </div>

                <div class="form-group">
                    <label for="modelTextField">model</label>
                    <input type="text" class="form-control"
                    id="modelTextField"
                    placeholder="Enter the car's model"
                    make="model" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">year</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the year of Publication"
                    make="Published" required>
                </div>

                <div class="form-group">
                    <label for="colourTextArea">colour</label>
                    <textarea type="text" class="form-control"
                    id="colourTextArea"
                    placeholder="Enter the a brief colour of the car"
                    make="colour" required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the car's Price"
                    make="Price" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/carcollection" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include('../partials/footer.ejs') %>